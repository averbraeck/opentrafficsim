<?xml version="1.0" encoding="UTF-8"?>

<jaxb:bindings xmlns:jaxb="https://jakarta.ee/xml/ns/jaxb" xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ots="http://www.opentrafficsim.org/ots"
  xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc" jaxb:version="3.0" jaxb:extensionBindingPrefixes="xjc simplify"
  xmlns:simplify="urn:jaxb.jvnet.org:plugin:simplify">

  <!-- Global bindings define an adapter to convert an XML type anywhere where it is used. -->
  <jaxb:globalBindings typesafeEnumMemberName="generateName">
    <xjc:serializable uid="10102" />

    <!-- Boolean -->
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.BooleanType" xmlType="ots:boolean"
      adapter="org.opentrafficsim.xml.bindings.BooleanAdapter" />

    <!-- Integer -->
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.IntegerType" xmlType="ots:int"
      adapter="org.opentrafficsim.xml.bindings.IntegerAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.IntegerType" xmlType="ots:positiveInteger"
      adapter="org.opentrafficsim.xml.bindings.PositiveIntegerAdapter" />

    <!-- Long -->
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.LongType" xmlType="ots:long"
      adapter="org.opentrafficsim.xml.bindings.LongAdapter" />
    <!-- ots:integer is an xsd:integer which is an unbounded value that may not fit in an Integer -->
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.LongType" xmlType="ots:integer"
      adapter="org.opentrafficsim.xml.bindings.LongAdapter" />

    <!-- Double -->
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.DoubleType" xmlType="ots:float"
      adapter="org.opentrafficsim.xml.bindings.DoubleAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.DoubleType" xmlType="ots:double"
      adapter="org.opentrafficsim.xml.bindings.DoubleAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.DoubleType" xmlType="ots:DoubleUnitInterval"
      adapter="org.opentrafficsim.xml.bindings.DoubleUnitIntervalAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.DoubleType" xmlType="ots:DoublePositive"
      adapter="org.opentrafficsim.xml.bindings.DoublePositiveAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.DoubleType" xmlType="ots:DoublePositiveInclusive"
      adapter="org.opentrafficsim.xml.bindings.DoublePositiveInclusiveAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.DoubleType" xmlType="ots:FractionType"
      adapter="org.opentrafficsim.xml.bindings.FractionAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.DoubleType" xmlType="ots:PositiveFactor"
      adapter="org.opentrafficsim.xml.bindings.PositiveFactorAdapter" />

    <!-- String -->
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.StringType" xmlType="ots:string"
      adapter="org.opentrafficsim.xml.bindings.StringAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.StringType" xmlType="ots:MultiLineString"
      adapter="org.opentrafficsim.xml.bindings.StringAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.StringType" xmlType="ots:space"
      adapter="org.opentrafficsim.xml.bindings.SpaceAdapter" />

    <!-- Djunits units -->
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.AccelerationUnitType"
      xmlType="ots:AccelerationUnitType" adapter="org.opentrafficsim.xml.bindings.AccelerationUnitAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.DurationUnitType" xmlType="ots:DurationUnitType"
      adapter="org.opentrafficsim.xml.bindings.DurationUnitAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.FrequencyUnitType" xmlType="ots:FrequencyUnitType"
      adapter="org.opentrafficsim.xml.bindings.FrequencyUnitAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.LengthUnitType" xmlType="ots:LengthUnitType"
      adapter="org.opentrafficsim.xml.bindings.LengthUnitAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.LinearDensityUnitType"
      xmlType="ots:LinearDensityUnitType" adapter="org.opentrafficsim.xml.bindings.LinearDensityUnitAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.SpeedUnitType" xmlType="ots:SpeedUnitType"
      adapter="org.opentrafficsim.xml.bindings.SpeedUnitAdapter" />

    <!-- Djunits scalars -->
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.TimeType" xmlType="ots:PositiveTimeType"
      adapter="org.opentrafficsim.xml.bindings.PositiveTimeAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.AccelerationType" xmlType="ots:AccelerationType"
      adapter="org.opentrafficsim.xml.bindings.AccelerationAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.PositiveAccelerationType"
      xmlType="ots:PositiveAccelerationType" adapter="org.opentrafficsim.xml.bindings.AccelerationAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.AngleType" xmlType="ots:AngleType"
      adapter="org.opentrafficsim.xml.bindings.AngleAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.DirectionType" xmlType="ots:DirectionType"
      adapter="org.opentrafficsim.xml.bindings.DirectionAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.LengthType" xmlType="ots:LengthType"
      adapter="org.opentrafficsim.xml.bindings.LengthAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.LengthType" xmlType="ots:PositiveLengthType"
      adapter="org.opentrafficsim.xml.bindings.PositiveLengthAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.SpeedType" xmlType="ots:SpeedType"
      adapter="org.opentrafficsim.xml.bindings.SpeedAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.SpeedType" xmlType="ots:PositiveSpeedType"
      adapter="org.opentrafficsim.xml.bindings.SpeedAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.TimeType" xmlType="ots:TimeType"
      adapter="org.opentrafficsim.xml.bindings.TimeAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.DurationType" xmlType="ots:DurationType"
      adapter="org.opentrafficsim.xml.bindings.DurationAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.DurationType" xmlType="ots:PositiveDurationType"
      adapter="org.opentrafficsim.xml.bindings.PositiveDurationAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.LinearDensityType" xmlType="ots:LinearDensityType"
      adapter="org.opentrafficsim.xml.bindings.LinearDensityAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.FrequencyType" xmlType="ots:FrequencyType"
      adapter="org.opentrafficsim.xml.bindings.FrequencyAdapter" />

    <!-- Other types -->
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.Point2dType" xmlType="ots:CoordinateType"
      adapter="org.opentrafficsim.xml.bindings.Point2dAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.ArcDirectionType" xmlType="ots:ArcDirectionType"
      adapter="org.opentrafficsim.xml.bindings.ArcDirectionAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.LaneKeepingPolicyType" xmlType="ots:LaneKeepingType"
      adapter="org.opentrafficsim.xml.bindings.LaneKeepingPolicyAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.PriorityType" xmlType="ots:PriorityType"
      adapter="org.opentrafficsim.xml.bindings.PriorityAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.LengthBeginEndType" xmlType="ots:LengthBeginEndType"
      adapter="org.opentrafficsim.xml.bindings.LengthBeginEndAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.ClassType" xmlType="ots:ClassNameType"
      adapter="org.opentrafficsim.xml.bindings.ClassAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.InterpolationType" xmlType="ots:InterpolationType"
      adapter="org.opentrafficsim.xml.bindings.InterpolationAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.GraphicsTypeType" xmlType="ots:GraphicsType"
      adapter="org.opentrafficsim.xml.bindings.GraphicsTypeAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.EncodingType" xmlType="ots:EncodingType"
      adapter="org.opentrafficsim.xml.bindings.EncodingAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.GtuPositionType" xmlType="ots:GtuPositionType"
      adapter="org.opentrafficsim.xml.bindings.GtuPositionAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.FieldType" xmlType="ots:StaticFieldNameType"
      adapter="org.opentrafficsim.xml.bindings.StaticFieldNameAdapter" />
    <xjc:javaType name="org.opentrafficsim.xml.bindings.types.ColorType" xmlType="ots:ColorType"
      adapter="org.opentrafficsim.xml.bindings.ColorAdapter" />

  </jaxb:globalBindings>

  <!-- The following bindings are on elements that appear once, and hence are not defined in a separate type. -->
  <!-- Simplifications, see: https://github.com/highsource/jaxb2-basics/wiki/JAXB2-Simplify-Plugin#as-element-properties -->

  <jaxb:bindings schemaLocation="ots-network.xsd">
    <!-- Network.Node/Centroid/Link/Connector/include as separate lists -->
    <jaxb:bindings node="//xsd:element[@name='Network']/xsd:complexType/xsd:sequence/xsd:choice">
      <simplify:as-element-property />
    </jaxb:bindings>
    <!-- Clothoid.Interpolated/Length/StartCurvature/EndCurvature/A/Flattener as separate lists -->
    <jaxb:bindings
      node="//xsd:element[@name='Clothoid']/xsd:complexType/xsd:sequence/xsd:choice/xsd:element[@name='Interpolated']">
      <simplify:as-element-property />
    </jaxb:bindings>
    <jaxb:bindings
      node="//xsd:element[@name='StripeOverride']/xsd:complexType/xsd:attribute[@name='LateralSync']">
      <jaxb:property>
        <jaxb:baseType>
          <xjc:javaType name="org.opentrafficsim.xml.bindings.types.StripeLateralSyncType"
            adapter="org.opentrafficsim.xml.bindings.StripeLateralSyncAdapter" />
        </jaxb:baseType>
      </jaxb:property>
    </jaxb:bindings>
  </jaxb:bindings>

  <jaxb:bindings schemaLocation="ots-definitions.xsd">
    <jaxb:bindings
      node="//xsd:element[@name='StripeType']/xsd:complexType/xsd:attribute[@name='LateralSync']">
      <jaxb:property>
        <jaxb:baseType>
          <xjc:javaType name="org.opentrafficsim.xml.bindings.types.StripeLateralSyncType"
            adapter="org.opentrafficsim.xml.bindings.StripeLateralSyncAdapter" />
        </jaxb:baseType>
      </jaxb:property>
    </jaxb:bindings>
    <jaxb:bindings
      node="//xsd:element[@name='Custom']/xsd:complexType/xsd:attribute[@name='LateralSync']">
      <jaxb:property>
        <jaxb:baseType>
          <xjc:javaType name="org.opentrafficsim.xml.bindings.types.StripeLateralSyncType"
            adapter="org.opentrafficsim.xml.bindings.StripeLateralSyncAdapter" />
        </jaxb:baseType>
      </jaxb:property>
    </jaxb:bindings>
    <jaxb:bindings node="//xsd:complexType[@name='StripeCompatibility']/xsd:attribute[@name='Direction']">
      <jaxb:property>
        <jaxb:baseType>
          <xjc:javaType name="java.lang.String" adapter="org.opentrafficsim.xml.bindings.StringAdapter" />
        </jaxb:baseType>
      </jaxb:property>
    </jaxb:bindings>
  </jaxb:bindings>

  <jaxb:bindings schemaLocation="ots-model.xsd">
    <jaxb:bindings node="//xsd:element[@name='Synchronization']">
      <jaxb:property>
        <jaxb:baseType>
          <xjc:javaType name="org.opentrafficsim.xml.bindings.types.SynchronizationType"
            adapter="org.opentrafficsim.xml.bindings.SynchronizationAdapter" />
        </jaxb:baseType>
      </jaxb:property>
    </jaxb:bindings>
    <jaxb:bindings node="//xsd:element[@name='Cooperation']">
      <jaxb:property>
        <jaxb:baseType>
          <xjc:javaType name="org.opentrafficsim.xml.bindings.types.CooperationType"
            adapter="org.opentrafficsim.xml.bindings.CooperationAdapter" />
        </jaxb:baseType>
      </jaxb:property>
    </jaxb:bindings>
    <jaxb:bindings node="//xsd:element[@name='GapAcceptance']">
      <jaxb:property>
        <jaxb:baseType>
          <xjc:javaType name="org.opentrafficsim.xml.bindings.types.GapAcceptanceType"
            adapter="org.opentrafficsim.xml.bindings.GapAcceptanceAdapter" />
        </jaxb:baseType>
      </jaxb:property>
    </jaxb:bindings>
    <jaxb:bindings node="//xsd:element[@name='Tailgating']">
      <jaxb:property>
        <jaxb:baseType>
          <xjc:javaType name="org.opentrafficsim.xml.bindings.types.TailgatingType"
            adapter="org.opentrafficsim.xml.bindings.TailgatingAdapter" />
        </jaxb:baseType>
      </jaxb:property>
    </jaxb:bindings>
    <jaxb:bindings node="//xsd:element[@name='Estimation']">
      <jaxb:property>
        <jaxb:baseType>
          <xjc:javaType name="org.opentrafficsim.xml.bindings.types.EstimationType"
            adapter="org.opentrafficsim.xml.bindings.EstimationAdapter" />
        </jaxb:baseType>
      </jaxb:property>
    </jaxb:bindings>
    <jaxb:bindings node="//xsd:element[@name='Anticipation']">
      <jaxb:property>
        <jaxb:baseType>
          <xjc:javaType name="org.opentrafficsim.xml.bindings.types.AnticipationType"
            adapter="org.opentrafficsim.xml.bindings.AnticipationAdapter" />
        </jaxb:baseType>
      </jaxb:property>
    </jaxb:bindings>
    <jaxb:bindings node="//xsd:element[@name='TaskManager']">
      <jaxb:property>
        <jaxb:baseType>
          <xjc:javaType name="org.opentrafficsim.xml.bindings.types.StringType"
            adapter="org.opentrafficsim.xml.bindings.StringAdapter" />
        </jaxb:baseType>
      </jaxb:property>
    </jaxb:bindings>
  </jaxb:bindings>

  <jaxb:bindings schemaLocation="ots-demand.xsd">
    <jaxb:bindings node="//xsd:element[@name='HeadwayDist']">
      <jaxb:property>
        <jaxb:baseType>
          <xjc:javaType name="org.opentrafficsim.xml.bindings.types.HeadwayDistributionType"
            adapter="org.opentrafficsim.xml.bindings.HeadwayDistributionAdapter" />
        </jaxb:baseType>
      </jaxb:property>
    </jaxb:bindings>
    <jaxb:bindings node="//xsd:element[@name='LaneBiases']/xsd:complexType/xsd:choice">
      <simplify:as-element-property />
    </jaxb:bindings>
  </jaxb:bindings>

  <jaxb:bindings schemaLocation="ots-control.xsd">
    <jaxb:bindings node="//xsd:element[@name='Control']/xsd:complexType/xsd:choice">
      <simplify:as-element-property />
    </jaxb:bindings>
  </jaxb:bindings>

</jaxb:bindings>