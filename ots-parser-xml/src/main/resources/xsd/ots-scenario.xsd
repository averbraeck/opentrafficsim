  <xsd:simpleType name="InputParameterIdType">
    <xsd:annotation>
      <xsd:appinfo source="pattern">Provide an alpha-numeric name between { }, not starting with a number.</xsd:appinfo>
    </xsd:annotation>
    <xsd:restriction base="xsd:string">
      <xsd:pattern value="\{[A-Za-z][A-Za-z0-9_\.]*\}" />
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:complexType name="ScenarioType">
