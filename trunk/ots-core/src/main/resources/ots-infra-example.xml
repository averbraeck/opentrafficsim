<?xml version="1.0" encoding="UTF-8"?>
<NETWORK xmlns="http://www.opentrafficsim.org/ots-infra" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.opentrafficsim.org/ots-infra ots-infra.xsd">

  <GLOBAL WIDTH="3.6m" SPEED="80km/h" />

  <ROUTE NAME="route14" NODELIST="N1 N2 N3b1 N3b2 N3b3 N4" />
  <ROUTE NAME="route15" NODELIST="N1 N2 N3b1 N3b2 N3b3 N4 N5" />

  <SHORTESTROUTE NAME="sr14" FROM="N1" VIA="N3b1 N3b2" TO="N4" DISTANCECOST="1.0/km" TIMECOST="0.0/min" />
  <SHORTESTROUTE NAME="sr15" FROM="N1" TO="N5" DISTANCECOST="1.0/km" TIMECOST="0.0/min" />

  <ROUTEMIX NAME="rm1415">
    <ROUTE NAME="route14" WEIGHT="80" />
    <ROUTE NAME="route15" WEIGHT="20" />
  </ROUTEMIX>

  <SHORTESTROUTEMIX NAME="sr1415">
    <SHORTESTROUTE NAME="sr14" WEIGHT="80" />
    <SHORTESTROUTE NAME="sr15" WEIGHT="20" />
  </SHORTESTROUTEMIX>

  <GTU NAME="CAR" GTUTYPE="CAR" FOLLOWING="IDM+" WIDTH="CONST(2.5) m" LENGTH="CONST(4) m" LANECHANGE="EGOISTIC"
    MAXSPEED="CONST(140) km/h" />
  <GTU NAME="TRUCK" GTUTYPE="CAR" FOLLOWING="IDM+" WIDTH="CONST(3) m" LENGTH="CONST(20) m" LANECHANGE="ALTRUISTIC"
    MAXSPEED="CONST(120) km/h" />

  <GTUMIX NAME="C80T20">
    <GTU NAME="CAR" WEIGHT="80"></GTU>
    <GTU NAME="TRUCK" WEIGHT="20"></GTU>
  </GTUMIX>

  <NODE NAME="N1" COORDINATE="(0.0, -10.0, 0.0)" ANGLE="45" />
  <NODE NAME="N2" />

  <LINK NAME="A4_12" FROM="N1" TO="N2" ELEMENTS="S1#X1|V2:V1#D#A1:A2|X2#S2">
    <STRAIGHT LENGTH="50m" />
    <LANE NAME="S1" WIDTH="1m" />
    <LANE NAME="S2" WIDTH="1m" />
  </LINK>

  <NODE NAME="N3b1" />

  <LINK NAME="A4_13a" FROM="N2" TO="N3b1" ELEMENTS="S1#V2:V1|D|A1:A2#S2">
    <ARC RADIUS="100m" ANGLE="90" DIRECTION="R" />
    <LANE NAME="S1" WIDTH="1m" />
    <LANE NAME="S2" WIDTH="1m" />
  </LINK>

  <NODE NAME="N3b2" />

  <LINK NAME="A4_13b" FROM="N3b1" TO="N3b2" ELEMENTS="S1#V2:V1|D|A1:A2#S2">
    <STRAIGHT LENGTH="50m" />
    <LANE NAME="S1" WIDTH="1m" />
    <LANE NAME="S2" WIDTH="1m" />
  </LINK>

  <NODE NAME="N3b3" />

  <LINK NAME="A4_14" FROM="N3b2" TO="N3b3" ELEMENTS="S1#V2:V1|D|A1:A2#S2">
    <ARC RADIUS="100m" ANGLE="90" DIRECTION="L" />
    <LANE NAME="S1" WIDTH="1m" />
    <LANE NAME="S2" WIDTH="1m" />
  </LINK>

  <NODE NAME="N4" />

  <LINK NAME="A4_14b" FROM="N3b2" TO="N4" ELEMENTS="S1#V2:V1|D|A1:A2>A3#S2">
    <STRAIGHT LENGTH="100m" />
    <LANE NAME="S1" WIDTH="1m" />
    <LANE NAME="S2" WIDTH="1m" />
    <LANE NAME="A3" SPEED="60km/h" />
  </LINK>

  <NODE NAME="N5" />

  <LINK NAME="A4_15" FROM="N2" TO="N5" ELEMENTS="S1#V2:V1|D|A1:A2#S2">
    <STRAIGHT LENGTH="200m" />
    <LANE NAME="S1" WIDTH="1m" />
    <LANE NAME="S2" WIDTH="1m" />
  </LINK>

  <NODE NAME="ENTRY5" />
  <LINK NAME="LE1" FROM="ENTRY5" TO="N3b2" ELEMENTS="|V1|D|A1|" SPEED="60km/h">
    <ARC RADIUS="100m" ANGLE="45" DIRECTION="R" />
  </LINK>

  <NODE NAME="ENTRY6" />
  <LINK NAME="LE2" FROM="ENTRY5" TO="ENTRY6" ELEMENTS="|V1|D|A1|" SPEED="60km/h">
    <ARC RADIUS="100m" ANGLE="-45" DIRECTION="L" />
  </LINK>

</NETWORK>
