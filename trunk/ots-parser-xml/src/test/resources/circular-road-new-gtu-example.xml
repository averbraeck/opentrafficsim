<?xml version="1.0" encoding="UTF-8"?>
<NETWORK xmlns="http://www.opentrafficsim.org/ots" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.opentrafficsim.org/ots https://opentrafficsim.org/docs/xsd/1.00.00/ots-network.xsd">

  <DEFINITIONS>

    <GLOBAL />

    <GTUTYPE NAME="CAR" />
    <GTUTYPE NAME="BICYCLE" />
    <GTUTYPE NAME="TRUCK" />

    <GTU NAME="BICYCLE" GTUTYPE="BICYCLE" LENGTH="CONST(2) m" WIDTH="CONST(0.5) m"
      MAXSPEED="CONST(25) km/h" />
    <GTU NAME="CAR" GTUTYPE="CAR" LENGTH="UNIF(4,8) m" WIDTH="UNIF(1.7, 2) m"
      MAXSPEED="TRIA(10,80,120) km/h" />
    <GTU NAME="TRUCK" GTUTYPE="TRUCK" LENGTH="UNIF(16,24) m" WIDTH="UNIF(2.2, 2.7) m"
      MAXSPEED="CONST(100) km/h" />

    <GTUMIX NAME="C60T40">
      <GTU NAME="CAR" WEIGHT="60"></GTU>
      <GTU NAME="TRUCK" WEIGHT="40"></GTU>
    </GTUMIX>

    <GTUMIX NAME="C80T20">
      <GTU NAME="CAR" WEIGHT="80" />
      <GTU NAME="TRUCK" WEIGHT="20" />
    </GTUMIX>

    <ROADTYPE NAME="HIGHWAY" DEFAULTLANEWIDTH="3.6m" DEFAULTLANEKEEPING="KEEPRIGHT"
      DEFAULTOVERTAKING="LEFTSET([CAR, TRUCK] OVERTAKE [ALL]) RIGHTSPEED(40 km/h)">
      <SPEEDLIMIT GTUTYPE="CAR" LEGALSPEEDLIMIT="100 km/h" />
      <SPEEDLIMIT GTUTYPE="TRUCK" LEGALSPEEDLIMIT="90 km/h" />
    </ROADTYPE>
    <ROADTYPE NAME="NOTRUCK" DEFAULTLANEWIDTH="3.6m" DEFAULTLANEKEEPING="KEEPRIGHT"
      DEFAULTOVERTAKING="LEFTSET([CAR, TRUCK] OVERTAKE [ALL]) RIGHTSPEED(40 km/h)">
      <SPEEDLIMIT GTUTYPE="CAR" LEGALSPEEDLIMIT="100 km/h" />
    </ROADTYPE>
    <ROADTYPE NAME="BICYCLEPATH" DEFAULTLANEWIDTH="1.8m" DEFAULTLANEKEEPING="KEEPRIGHT" DEFAULTOVERTAKING="SAMELANELEFT">
      <SPEEDLIMIT GTUTYPE="BICYCLE" LEGALSPEEDLIMIT="25 km/h" />
    </ROADTYPE>

    <ROADLAYOUT ID="r1" LINKTYPE="HIGHWAY">
      <SHOULDER WIDTH="2m" OFFSET="-7.1m" COLOR="GREEN" />
      <STRIPE TYPE="SOLID" OFFSET="-6.1m" />
      <NOTRAFFICLANE OFFSET="-4.85m" WIDTH="2.5m" />
      <STRIPE TYPE="SOLID" OFFSET="-3.6m" />
      <LANE ID="A1" OFFSET="-1.8m" WIDTH="3.6m" DIRECTION="FORWARD" />
      <STRIPE TYPE="SOLID" OFFSET="0.0m" WIDTH="20cm" COLOR="#FFFFFF" />
      <NOTRAFFICLANE OFFSET="1.25m" WIDTH="2.5m" />
      <STRIPE TYPE="SOLID" OFFSET="2.5m" />
      <SHOULDER WIDTH="2m" OFFSET="3.5m" COLOR="GREEN" />
    </ROADLAYOUT>

    <ROADLAYOUT ID="r2" LINKTYPE="HIGHWAY">
      <SHOULDER WIDTH="2m" OFFSET="-3.5m" COLOR="GREEN" />
      <STRIPE TYPE="SOLID" OFFSET="-2.5m" />
      <NOTRAFFICLANE OFFSET="-1.25m" WIDTH="2.5m" />
      <STRIPE TYPE="SOLID"><CENTEROFFSET>0m</CENTEROFFSET></STRIPE>
      <LANE ID="A1" OFFSET="1.8m" WIDTH="3.6m" DIRECTION="FORWARD" />
      <STRIPE TYPE="DASHED" OFFSET="3.6m" COLOR="RGB(255,255,255)" />
      <LANE ID="A2" OFFSET="5.4m" WIDTH="3.6m" DIRECTION="FORWARD" />
      <STRIPE TYPE="SOLID" OFFSET="7.2m" COLOR="RGB(255,255,255)" />
      <NOTRAFFICLANE OFFSET="8.45m" WIDTH="2.5m" />
      <STRIPE TYPE="SOLID" OFFSET="9.7m" />
      <SHOULDER WIDTH="2m" OFFSET="10.7m" COLOR="GREEN" />
    </ROADLAYOUT>

    <ROADLAYOUT ID="r3" LINKTYPE="HIGHWAY">
      <SHOULDER WIDTH="2m" OFFSET="-7.1m" COLOR="GREEN" />
      <STRIPE TYPE="SOLID" OFFSET="-6.1m" />
      <NOTRAFFICLANE OFFSET="-4.85m" WIDTH="2.5m" />
      <STRIPE TYPE="SOLID" OFFSET="-3.6m" />
      <LANE ID="A1" OFFSET="-1.8m" WIDTH="3.6m" DIRECTION="FORWARD" />
      <STRIPE TYPE="DASHED" OFFSET="0m" COLOR="RGB(255,255,255)" />
      <LANE ID="A2" OFFSET="1.8m" WIDTH="3.6m" DIRECTION="FORWARD" />
      <STRIPE TYPE="DASHED" OFFSET="3.6m" COLOR="RGB(255,255,255)" />
      <LANE ID="A3" OFFSET="5.4m" WIDTH="3.6m" DIRECTION="FORWARD" />
      <STRIPE TYPE="SOLID" OFFSET="7.2m" WIDTH="20cm" COLOR="#FFFFFF" />
      <NOTRAFFICLANE OFFSET="8.45m" WIDTH="2.5m" />
      <STRIPE TYPE="SOLID" OFFSET="9.7m" />
      <SHOULDER WIDTH="2m" OFFSET="10.7m" COLOR="GREEN" />
    </ROADLAYOUT>

  </DEFINITIONS>

  <NODE ID="N1" COORDINATE="(0.0,0.0)" DIRECTION="90 deg" />
  <NODE ID="N1a" />
  <NODE ID="N2" />
  <NODE ID="NE" />
  <NODE ID="NE2" />

  <ROUTE NAME="CIRCLE" NODELIST="NE N1 N1a N2 N1" />

  <LINK ID="L1" NODESTART="N1" NODEEND="N1a" ROADLAYOUT="r3" LANEKEEPING="KEEPLANE">
    <ARC RADIUS="1000m" DIRECTION="L" />
    <!-- TRAFFICLIGHT LANE="A2" POSITION="END-10cm" CLASS="org.opentrafficsim.road.gtu.lane.object.LaneBlockOnOff" />
    <TRAFFICLIGHT LANE="A3" POSITION="END-10cm" CLASS="org.opentrafficsim.road.gtu.lane.object.LaneBlockOnOff" / -->
    <!-- BLOCK LANE="A1" POSITION="END-10cm" / -->
  </LINK>

  <LINK ID="L1a" NODESTART="N1a" NODEEND="N2" ROADLAYOUT="r2">
    <ARC RADIUS="1000m" DIRECTION="L" />
  </LINK>

  <LINK ID="L2" NODESTART="N2" NODEEND="N1" ROADLAYOUT="r2">
    <ARC RADIUS="1000m" DIRECTION="L" />
    <!-- LANEOVERRIDE LANE="A1" OVERTAKING="LEFTONLY" />
    <LANEOVERRIDE LANE="A2" OVERTAKING="LEFTALWAYS RIGHTSPEED(40 km/h)" / -->
  </LINK>

  <LINK ID="ENTRY" NODESTART="NE" NODEEND="N1" ROADLAYOUT="r1">
    <STRAIGHT LENGTH="200m" />
  </LINK> 

  <LINK ID="ENTRY2" NODESTART="NE2" NODEEND="NE" ROADLAYOUT="r1">
    <STRAIGHT LENGTH="200m" />
    <LANEOVERRIDE LANE="A1" LEGALSPEEDLIMIT="50 km/h" OVERTAKING="NONE" COLOR="ORANGE" />
    <GENERATOR LANE="A1" POSITION="50m" IAT="CONST(5.0) s" INITIALSPEED="CONST(0.0) km/h" MAXGTU="100" GTU="CAR"
      ROUTE="CIRCLE" GTUCOLORER="SWITCHABLE" />
  </LINK>

</NETWORK>
