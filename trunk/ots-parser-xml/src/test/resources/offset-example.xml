<?xml version="1.0" encoding="UTF-8" ?>
<NETWORK xmlns="http://www.opentrafficsim.org/ots" xmlns:ots="http://www.opentrafficsim.org/ots" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.opentrafficsim.org/ots http://www.opentrafficsim.org/docs/current/ots-network.xsd" xmlns:xi="http://www.w3.org/2001/XInclude">

  <!-- fallback included to be able to run in eclipse -->
  <xi:include href="roadtypes.xml" parse="xml">
    <xi:fallback>
      <xi:include href="./target/classes/roadtypes.xml" parse="xml" />
    </xi:fallback>
  </xi:include>

  <DEFINITIONS>

    <GTU NAME="CAR" GTUTYPE="CAR" LENGTH="CONST(5) m" WIDTH="UNIF(1.7, 2) m"
      MAXSPEED="TRIA(50,80,120) km/h" />
    <GTU NAME="TRUCK" GTUTYPE="TRUCK" LENGTH="UNIF(16,24) m" WIDTH="UNIF(2.2, 2.7) m"
      MAXSPEED="CONST(100) km/h" />

    <GTUMIX NAME="C60T40">
      <GTU NAME="CAR" WEIGHT="60"></GTU>
      <GTU NAME="TRUCK" WEIGHT="40"></GTU>
    </GTUMIX>

    <GTUMIX NAME="C80T20">
      <GTU NAME="CAR" WEIGHT="80" />
      <GTU NAME="TRUCK" WEIGHT="20" />
    </GTUMIX>

  </DEFINITIONS>


  <NODE NAME="N1a" COORDINATE="(0.0, 0.0)" DIRECTION="90 deg" />
  <NODE NAME="N1b" />
  <NODE NAME="N2a" COORDINATE="(100.0, 0.0)" DIRECTION="90 deg" />
  <NODE NAME="N2b" />
  <NODE NAME="N3a" COORDINATE="(200.0, 0.0)" DIRECTION="90 deg" />
  <NODE NAME="N3b" />

  <LINK NAME="L1" NODESTART="N1a" NODEEND="N1b" ROADLAYOUT="r3">
    <STRAIGHT LENGTH="200m" />
  </LINK>

  <LINK NAME="L2" NODESTART="N2a" NODEEND="N2b" ROADLAYOUT="r3" OFFSETSTART="25m">
    <STRAIGHT LENGTH="200m" />
  </LINK>

  <LINK NAME="L3" NODESTART="N3a" NODEEND="N3b" ROADLAYOUT="r3" OFFSETSTART="50m" ROTATIONSTART="-90 deg">
    <STRAIGHT LENGTH="200m" />
  </LINK>

</NETWORK>
