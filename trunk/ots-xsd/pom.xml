<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>opentrafficsim</groupId>
    <artifactId>ots</artifactId>
    <version>1.01.01-SNAPSHOT</version>
    <relativePath>../ots/pom.xml</relativePath>
  </parent>

  <artifactId>ots-xsd</artifactId>
  <name>OTS XSD schema definitions</name>
  <description>OTS XSD schema definitions for XML files</description>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>wagon-maven-plugin</artifactId>
        <version>${wagon.maven.version}</version>
        <executions>
          <execution>
            <id>upload-schema-current</id>
            <phase>deploy</phase>
            <goals>
              <goal>upload</goal>
            </goals>
            <configuration>
              <fromDir>${basedir}/src/main/resources</fromDir>
              <includes>ots-types.xsd, ots-definitions.xsd, ots-network.xsd</includes>
              <url>sftp://opentrafficsim.org/home/web/opentrafficsim.org/docs</url>
              <toDir>current</toDir>
              <serverId>ots-deployment</serverId>
            </configuration>
          </execution>
          <execution>
            <id>upload-schema-version</id>
            <phase>deploy</phase>
            <goals>
              <goal>upload</goal>
            </goals>
            <configuration>
              <fromDir>${basedir}/src/main/resources</fromDir>
              <includes>ots-types.xsd, ots-definitions.xsd, ots-network.xsd, ots-demand.xsd, ots-control.xsd</includes>
              <url>sftp://opentrafficsim.org/home/web/opentrafficsim.org/docs</url>
              <toDir>${version}</toDir>
              <serverId>ots-deployment</serverId>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.jvnet.jaxb2.maven2</groupId>
        <artifactId>maven-jaxb2-plugin</artifactId>
        <version>${maven-jaxb2.version}</version>
        <executions>
          <execution>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <schemaDirectory>src/main/resources</schemaDirectory>
          <generateDirectory>src/main/java</generateDirectory>
          <generatePackage>org.opentrafficsim.xml.generated</generatePackage>
          <markGenerated>true</markGenerated>
          <cleanPackageDirectories>true</cleanPackageDirectories>
          <scanDependenciesForBindings>true</scanDependenciesForBindings>
          <strict>false</strict>
          <specVersion>2.3</specVersion>
          <verbose>true</verbose>
          <extension>true</extension>
          <schemaIncludes>
            <schemaInclude>**/*.xsd</schemaInclude>
          </schemaIncludes>
        </configuration>
      </plugin>

    </plugins>

  </build>

  <dependencies>

    <dependency>
      <groupId>java3d</groupId>
      <artifactId>vecmath</artifactId>
    </dependency>

    <dependency>
      <groupId>java3d</groupId>
      <artifactId>j3d-core</artifactId>
    </dependency>

    <dependency>
      <groupId>org.djunits</groupId>
      <artifactId>djunits</artifactId>
    </dependency>

    <dependency>
      <groupId>org.djutils</groupId>
      <artifactId>djutils</artifactId>
    </dependency>

  </dependencies>

</project>