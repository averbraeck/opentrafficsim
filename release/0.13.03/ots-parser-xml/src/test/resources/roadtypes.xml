<?xml version="1.0" encoding="UTF-8"?>
<DEFINITIONS xmlns="http://www.opentrafficsim.org/ots" xmlns:ots="http://www.opentrafficsim.org/ots"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xi="http://www.w3.org/2001/XInclude"
  xsi:schemaLocation="http://www.opentrafficsim.org/ots http://www.opentrafficsim.org/docs/current/ots-definitions.xsd">

  <GLOBAL />

  <GTUTYPE NAME="CAR" />
  <GTUTYPE NAME="TRUCK" />

  <ROADTYPE NAME="HIGHWAY" DEFAULTLANEWIDTH="3.6m" DEFAULTLANEKEEPING="KEEPRIGHT"
    DEFAULTOVERTAKING="LEFTSET([CAR, TRUCK] OVERTAKE [ALL]) RIGHTSPEED(40 km/h)">
    <SPEEDLIMIT GTUTYPE="CAR" LEGALSPEEDLIMIT="130 km/h"/>
    <SPEEDLIMIT GTUTYPE="TRUCK" LEGALSPEEDLIMIT="90 km/h"/>
  </ROADTYPE>

  <ROADLAYOUT NAME="r1" ROADTYPE="HIGHWAY">
    <SHOULDER WIDTH="2m" OFFSET="-7.1m" COLOR="GREEN" />
    <STRIPE TYPE="SOLID" OFFSET="-6.1m" />
    <NOTRAFFICLANE OFFSET="-4.85m" WIDTH="2.5m" />
    <STRIPE TYPE="SOLID" OFFSET="-3.6m" />
    <LANE NAME="A1" OFFSET="-1.8m" WIDTH="3.6m" DIRECTION="FORWARD" />
    <STRIPE TYPE="SOLID" OFFSET="0m" WIDTH="20cm" COLOR="#FFFFFF" />
    <NOTRAFFICLANE OFFSET="1.25m" WIDTH="2.5m" />
    <STRIPE TYPE="SOLID" OFFSET="2.5m" />
    <SHOULDER WIDTH="2m" OFFSET="3.5m" COLOR="GREEN" />
  </ROADLAYOUT>

  <ROADLAYOUT NAME="r2" ROADTYPE="HIGHWAY">
    <SHOULDER WIDTH="2m" OFFSET="-3.5m" COLOR="GREEN" />
    <STRIPE TYPE="SOLID" OFFSET="-2.5m" />
    <NOTRAFFICLANE WIDTH="2.5m" OFFSET="-1.25m" />
    <STRIPE TYPE="SOLID" OFFSET="0m" />
    <LANE NAME="A1" OFFSET="1.8m" WIDTH="3.6m" DIRECTION="FORWARD" />
    <STRIPE TYPE="DASHED" OFFSET="3.6m" COLOR="RGB(255,255,255)" />
    <LANE NAME="A2" OFFSET="5.4m" WIDTH="3.6m" DIRECTION="FORWARD" />
    <STRIPE TYPE="SOLID" OFFSET="7.2m" WIDTH="20cm" COLOR="#FFFFFF" />
    <NOTRAFFICLANE OFFSET="8.45m" WIDTH="2.5m" />
    <STRIPE TYPE="SOLID" OFFSET="9.7m" />
    <SHOULDER WIDTH="2m" OFFSET="10.7m" COLOR="GREEN" />
  </ROADLAYOUT>

  <ROADLAYOUT NAME="r3" ROADTYPE="HIGHWAY">
    <SHOULDER WIDTH="2m" OFFSET="-7.1m" COLOR="GREEN" />
    <STRIPE TYPE="SOLID" OFFSET="-6.1m" />
    <NOTRAFFICLANE OFFSET="-4.85m" WIDTH="2.5m" />
    <STRIPE TYPE="SOLID" OFFSET="-3.6m" />
    <LANE NAME="A1" OFFSET="-1.8m" WIDTH="3.6m" DIRECTION="FORWARD" />
    <STRIPE TYPE="DASHED" OFFSET="0m" COLOR="RGB(255,255,255)" />
    <LANE NAME="A2" OFFSET="1.8m" WIDTH="3.6m" DIRECTION="FORWARD" />
    <STRIPE TYPE="DASHED" OFFSET="3.6m" COLOR="RGB(255,255,255)" />
    <LANE NAME="A3" OFFSET="5.4m" WIDTH="3.6m" DIRECTION="FORWARD" />
    <STRIPE TYPE="SOLID" OFFSET="7.2m" WIDTH="20cm" COLOR="#FFFFFF" />
    <NOTRAFFICLANE OFFSET="8.45m" WIDTH="2.5m" />
    <STRIPE TYPE="SOLID" OFFSET="9.7m" />
    <SHOULDER WIDTH="2m" OFFSET="10.7m" COLOR="GREEN" />
  </ROADLAYOUT>

</DEFINITIONS>
