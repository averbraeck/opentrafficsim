<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE xml>
<NETWORK xmlns="http://www.opentrafficsim.org/ots" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.opentrafficsim.org/ots http://www.opentrafficsim.org/docs/current/ots-network.xsd">

  <DEFINITIONS>

    <GLOBAL />

    <GTUTYPE NAME="CAR" />
    <GTUTYPE NAME="TRUCK" />

    <GTU NAME="CAR" GTUTYPE="CAR" LENGTH="UNIF(4,7) m" WIDTH="UNIF(1.7, 2) m"
      MAXSPEED="CONST(120) km/h" />
    <GTU NAME="TRUCK" GTUTYPE="TRUCK" LENGTH="UNIF(16,24) m" WIDTH="UNIF(2.2, 2.7) m"
      MAXSPEED="CONST(100) km/h" />

    <GTUMIX NAME="C60T40">
      <GTU NAME="CAR" WEIGHT="60"></GTU>
      <GTU NAME="TRUCK" WEIGHT="40"></GTU>
    </GTUMIX>

    <GTUMIX NAME="C80T20">
      <GTU NAME="CAR" WEIGHT="80" />
      <GTU NAME="TRUCK" WEIGHT="20" />
    </GTUMIX>

    <ROADTYPE NAME="HIGHWAY" DEFAULTLANEWIDTH="3.6m" DEFAULTLANEKEEPING="KEEPRIGHT"
      DEFAULTOVERTAKING="LEFTSET([CAR, TRUCK] OVERTAKE [ALL]) RIGHTSPEED(40 km/h)">
      <SPEEDLIMIT GTUTYPE="CAR" LEGALSPEEDLIMIT="100km/h" />
      <SPEEDLIMIT GTUTYPE="TRUCK" LEGALSPEEDLIMIT="90km/h" />
    </ROADTYPE>

    <ROADTYPE NAME="STREET" DEFAULTLANEWIDTH="3.6m" DEFAULTLANEKEEPING="KEEPRIGHT"
      DEFAULTOVERTAKING="LEFTSET([CAR, TRUCK] OVERTAKE [ALL]) RIGHTSPEED(40 km/h)">
      <SPEEDLIMIT GTUTYPE="CAR" LEGALSPEEDLIMIT="40km/h" />
      <SPEEDLIMIT GTUTYPE="TRUCK" LEGALSPEEDLIMIT="40km/h" />
    </ROADTYPE>

    <LANETYPE NAME="NOTRUCK">
      <SPEEDLIMIT GTUTYPE="CAR" LEGALSPEEDLIMIT="100km/h" />
    </LANETYPE>

    <ROADLAYOUT NAME="r1" ROADTYPE="STREET">
      <SHOULDER WIDTH="2m" OFFSET="-5.75m" COLOR="GREEN" />
      <STRIPE TYPE="SOLID" OFFSET="-4.75m" />
      <LANE NAME="FORWARD" OFFSET="-3m" WIDTH="3.5m" DIRECTION="FORWARD" />
      <STRIPE TYPE="SOLID" OFFSET="-1.25m" WIDTH="20cm" COLOR="#FFFFFF" />
      <NOTRAFFICLANE OFFSET="0m" WIDTH="2.5m" COLOR="GREEN" />
      <STRIPE TYPE="SOLID" OFFSET="1.25m" />
      <LANE NAME="REVERSE" OFFSET="3m" WIDTH="3.5m" DIRECTION="FORWARD" />
      <STRIPE TYPE="SOLID" OFFSET="4.75m" />
      <SHOULDER WIDTH="2m" OFFSET="5.75m" COLOR="GREEN" />
    </ROADLAYOUT>

    <ROADLAYOUT NAME="r2" ROADTYPE="STREET">
      <SHOULDER WIDTH="2m" OFFSET="-5.75m" COLOR="GREEN" />
      <STRIPE TYPE="SOLID" OFFSET="-4.75m" />
      <LANE NAME="FORWARD" OFFSET="-3m" WIDTH="3.5m" DIRECTION="FORWARD" />
      <LANE NAME="REVERSE" OFFSET="3m" WIDTH="3.5m" DIRECTION="FORWARD" />
    </ROADLAYOUT>

    <ROADLAYOUT NAME="r3" ROADTYPE="STREET">
      <LANE NAME="FORWARD" OFFSET="-3m" WIDTH="3.5m" DIRECTION="FORWARD" />
      <LANE NAME="REVERSE" OFFSET="3m" WIDTH="3.5m" DIRECTION="FORWARD" />
    </ROADLAYOUT>

  </DEFINITIONS>

  <NODE NAME="N" COORDINATE="(0,200)" ANGLE="270 deg" />
  <NODE NAME="E" COORDINATE="(200,0)" ANGLE="180 deg" />
  <NODE NAME="S" COORDINATE="(0,-200)" ANGLE="90 deg" />
  <NODE NAME="W" COORDINATE="(-200,0)" ANGLE="0 deg" />
  <NODE NAME="NC" COORDINATE="(0,12)" ANGLE="270 deg" />
  <NODE NAME="EC" COORDINATE="(12,0)" ANGLE="180 deg" />
  <NODE NAME="SC" COORDINATE="(0,-12)" ANGLE="90 deg" />
  <NODE NAME="WC" COORDINATE="(-12,0)" ANGLE="0 deg" />

  <ROUTE NAME="NE" NODELIST="N NC EC E" />
  <ROUTE NAME="NS" NODELIST="N NC SC S" />
  <ROUTE NAME="NW" NODELIST="N NC WC W" />
  <ROUTE NAME="EN" NODELIST="E EC NC N" />
  <ROUTE NAME="ES" NODELIST="E EC SC S" />
  <ROUTE NAME="EW" NODELIST="E EC WC W" />
  <ROUTE NAME="SN" NODELIST="S SC NC N" />
  <ROUTE NAME="SE" NODELIST="S SC EC E" />
  <ROUTE NAME="SW" NODELIST="S SC WC W" />
  <ROUTE NAME="WN" NODELIST="W WC NC N" />
  <ROUTE NAME="WE" NODELIST="W WC EC E" />
  <ROUTE NAME="WS" NODELIST="W WC SC S" />

  <LINK NAME="NNC" NODESTART="N" NODEEND="NC" ROADLAYOUT="r1">
    <STRAIGHT />
    <GENERATOR LANE="FORWARD" POSITION="10m" IAT="EXPO(27) s" INITIALSPEED="CONST(30.0) km/h" GTU="CAR" ROUTE="NS"
      GTUCOLORER="SWITCHABLE" />
  </LINK>

  <LINK NAME="EEC" NODESTART="E" NODEEND="EC" ROADLAYOUT="r1">
    <STRAIGHT />
    <GENERATOR LANE="FORWARD" POSITION="10m" IAT="EXPO(27) s" INITIALSPEED="CONST(30.0) km/h" GTU="CAR" ROUTE="EW"
      GTUCOLORER="SWITCHABLE" />
  </LINK>

  <LINK NAME="SSC" NODESTART="S" NODEEND="SC" ROADLAYOUT="r1">
    <STRAIGHT />
    <GENERATOR LANE="FORWARD" POSITION="10m" IAT="EXPO(27) s" INITIALSPEED="CONST(30.0) km/h" GTU="CAR" ROUTE="SN"
      GTUCOLORER="SWITCHABLE" />
  </LINK>

  <LINK NAME="WWC" NODESTART="W" NODEEND="WC" ROADLAYOUT="r1">
    <STRAIGHT />
    <GENERATOR LANE="FORWARD" POSITION="10m" IAT="EXPO(27) s" INITIALSPEED="CONST(30.0) km/h" GTU="CAR" ROUTE="WE"
      GTUCOLORER="SWITCHABLE" />
  </LINK>

  <LINK NAME="ECNC" NODESTART="EC" NODEEND="NC" ROADLAYOUT="r2">
    <ARC RADIUS="12m" ANGLE="90 deg" DIRECTION="R" />
  </LINK>

  <LINK NAME="NCWC" NODESTART="NC" NODEEND="WC" ROADLAYOUT="r2">
    <ARC RADIUS="12m" ANGLE="90 deg" DIRECTION="R" />
  </LINK>

  <LINK NAME="WCSC" NODESTART="WC" NODEEND="SC" ROADLAYOUT="r2">
    <ARC RADIUS="12m" ANGLE="90 deg" DIRECTION="R" />
  </LINK>

  <LINK NAME="SCEC" NODESTART="SC" NODEEND="EC" ROADLAYOUT="r2">
    <ARC RADIUS="12m" ANGLE="90 deg" DIRECTION="R" />
  </LINK>

  <LINK NAME="NCSC" NODESTART="NC" NODEEND="SC" ROADLAYOUT="r3">
    <STRAIGHT />
  </LINK>

  <LINK NAME="WCEC" NODESTART="WC" NODEEND="EC" ROADLAYOUT="r3">
    <STRAIGHT />
  </LINK>

</NETWORK>
