<?xml version="1.1" encoding="UTF-8"?>
<NETWORK xmlns="http://www.opentrafficsim.org/ots" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.opentrafficsim.org/ots http://www.opentrafficsim.org/docs/current/ots-network.xsd">

  <DEFINITIONS>

    <GLOBAL DEFAULTLANEWIDTH="3.6m" DEFAULTMAXSPEED="100km/h" DEFAULTLANEKEEPING="KEEPRIGHT" DEFAULTOVERTAKING="LEFTONLY" />

    <GTUTYPE NAME="CAR" />

    <GTU NAME="CAR" GTUTYPE="CAR" LENGTH="CONST(5) m" WIDTH="CONST(2) m"
      MAXSPEED="CONST(10) m/s" />

    <ROADTYPE NAME="ROAD" />

    <COMPATIBILITY LANETYPE="ROAD">
      <GTU NAME="CAR" />
    </COMPATIBILITY>

    <ROADLAYOUT NAME="r1">
      <LANE NAME="A1" TYPE="ROAD" OFFSET="-1.8m" WIDTH="3.6m" DIRECTION="FORWARD"  MAXSPEED="10 m/s" />
    </ROADLAYOUT>

  </DEFINITIONS>

  <!-- ================================== NETWORK =================================== -->

  <NODE NAME="N1" COORDINATE="(0.0, 0.0)" ANGLE="90 deg" />
  <NODE NAME="N2" />
  <NODE NAME="N3" />
  <NODE NAME="N4" />

  <ROUTE NAME="LINE" NODELIST="N1 N2 N3 N4" />

  <LINK NAME="N1-N2" NODESTART="N1" NODEEND="N2" ROADTYPE="r1">
    <STRAIGHT LENGTH="100m" />
    <GENERATOR LANE="A1" POSITION="50 m" IAT="CONST(0) s" INITIALSPEED="CONST(10.0) m/s" GTU="CAR" ROUTE="LINE"
      MAXGTU="10" GTUCOLORER="ID" />
  </LINK>

  <LINK NAME="N2-N3" NODESTART="N2" NODEEND="N3" ROADTYPE="r1">
    <STRAIGHT LENGTH="100m" />
  </LINK>

  <LINK NAME="SINK" NODESTART="N3" NODEEND="N4" ROADTYPE="r1">
    <STRAIGHT LENGTH="10m" />
    <SINK LANE="A1" POSITION="1m" />
  </LINK>

</NETWORK>
