<?xml version="1.0" encoding="UTF-8"?>
<NETWORK xmlns="http://www.opentrafficsim.org/ots" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.opentrafficsim.org/ots http://www.opentrafficsim.org/docs/ots-network.xsd">

  <DEFINITIONS>
  
  	<GLOBAL DEFAULTLANEWIDTH="3.6m" DEFAULTMAXSPEED="120km/h" DEFAULTLANEKEEPING="KEEPLANE" 
      DEFAULTOVERTAKING="LEFTSET([CAR, TRUCK] OVERTAKE [ALL]) RIGHTSPEED(40 km/h)"/>
    <GTU NAME="CAR" GTUTYPE="CAR" FOLLOWING="IDM+" LENGTH="UNIF(4,6) m" WIDTH="UNIF(1.7, 2) m" LANECHANGE="EGOISTIC"
      MAXSPEED="NORM(123.7, 12) km/h" />
    <GTU NAME="TRUCK" GTUTYPE="TRUCK" FOLLOWING="IDM+" LENGTH="UNIF(16,24) m" WIDTH="UNIF(2.2, 2.7) m" LANECHANGE="ALTRUISTIC"
      MAXSPEED="NORM(85, 2.5) km/h" />

    <GTUMIX NAME="C85T15">
      <GTU NAME="CAR" WEIGHT="85" />
      <GTU NAME="TRUCK" WEIGHT="15" />
    </GTUMIX>
    
    <LANETYPE NAME="HIGHWAY" />
    
    <COMPATIBILITY LANETYPE="HIGHWAY" GTULIST="CAR TRUCK" />
    
    <ROADTYPE NAME="TWOLANE">
      <SHOULDER WIDTH="2m" OFFSET="5.2m" COLOR="RGB(0,128,0)" />
      <NOTRAFFICLANE WIDTH="0.6m" OFFSET="3.9m" />
      <STRIPE TYPE="SOLID" OFFSET="3.6m" />
      <LANE NAME="LEFTLANE" OFFSET="1.8m" TYPE="HIGHWAY" DIRECTION="FORWARD" />
      <STRIPE TYPE="DASHED" OFFSET="0.0m" />
      <LANE NAME="RIGHTLANE" OFFSET="-1.8m" TYPE="HIGHWAY" DIRECTION="FORWARD" />
      <STRIPE TYPE="SOLID" OFFSET="-3.6m" />
      <NOTRAFFICLANE OFFSET="-5.4m" />
      <SHOULDER WIDTH="2m" OFFSET="-8.2m" COLOR="RGB(0,128,0)" />
    </ROADTYPE>
    
    <ROADTYPE NAME="SINGLELANE">
      <SHOULDER WIDTH="2m" OFFSET="1.6m" COLOR="RGB(0,128,0)" />
      <NOTRAFFICLANE WIDTH="0.6m" OFFSET="0.3m" />
      <STRIPE TYPE="SOLID" OFFSET="0.0m" />
      <LANE NAME="LANE" OFFSET="-1.8m" TYPE="HIGHWAY" DIRECTION="FORWARD" />
      <STRIPE TYPE="SOLID" OFFSET="-3.6m" />
      <NOTRAFFICLANE OFFSET="-5.4m" />
      <SHOULDER WIDTH="2m" OFFSET="-8.2m" COLOR="RGB(0,128,0)" />
    </ROADTYPE>
  
  </DEFINITIONS>
  
  <NODE NAME="A" COORDINATE="(0,0)" />
  <NODE NAME="B" COORDINATE="(2000,0)" />
  <NODE NAME="C" COORDINATE="(3000,0)" />
  
  <ROUTE NAME="ABC" NODELIST="A B C" />
  
  <LINK NAME="AB" NODESTART="A" NODEEND="B" ROADTYPE="TWOLANE">
    <STRAIGHT />
    <GENERATOR LANE="LEFTLANE" POSITION="0m"  IAT="CONST(1.8) s"  INITIALSPEED="CONST(120) km/h" 
      GTU="CAR" ROUTE="ABC" GTUCOLORER="SWITCHABLE" />
    <GENERATOR LANE="RIGHTLANE" POSITION="0m" IAT="CONST(2.25) s" INITIALSPEED="CONST(90) km/h" 
      GTU="CAR" ROUTE="ABC" GTUCOLORER="SWITCHABLE" />
  </LINK>
  
  <LINK NAME="BC" NODESTART="B" NODEEND="C" ROADTYPE="SINGLELANE">
    <STRAIGHT />
  </LINK>
    
</NETWORK>